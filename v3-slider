        }

        .pricing-container {
            width: 100vw;
            height: 100vh;
            padding: 30px;
            box-sizing: border-box;
            background-color: #ffffff;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .slider-container {
            width: 100%;
            position: relative;
            margin-bottom: 40px;
        }

        .slider-label {
            font-size: 16px;
            font-weight: bold;
            color: #333333;
            margin-bottom: 5px;
        }

        .info-text {
            font-size: 12px;
            color: #666666;
            margin-top: 10px; /* 10px margin above the info text */
            margin-bottom: 15px;
        }

        .slider {
            width: 100%;
            -webkit-appearance: none;
            appearance: none;
            height: 8px;
            background: #e0e0e0;
            outline: none;
            border-radius: 5px;
        }

        .slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 20px;
